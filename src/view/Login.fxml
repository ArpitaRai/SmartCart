      </ImageView>
        <Label fx:id="lblSignIn" alignment="CENTER" layoutX="310.0" layoutY="183.0" prefHeight="56.0" prefWidth="300.0" text="Sign in/Register" textFill="#31ab0f">
            <font>
                <Font size="28.0" />
            </font>
        </Label>
        <ImageView fitHeight="134.0" fitWidth="187.0" layoutX="368.0" layoutY="21.0" preserveRatio="true">
            <image>
                <Image url="@../../bin/images/SmartCartLogo.jpeg" />
            </image>
        </ImageView>
        <Label fx:id="username_label" layoutX="241.0" layoutY="271.0" prefHeight="26.0" prefWidth="100.0" text="Username:">
         <font>
            <Font name="System Bold" size="13.600000381469727" />
         </font></Label>
        <Label fx:id="password_label" layoutX="241.0" layoutY="337.0" prefHeight="26.0" prefWidth="100.0" text="Password:">
